<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Hotel.App">
    <Application.Resources>
        <Style x:Key="fonteTitulos" TargetType="Label">
            <Setter Property="FontFamily">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="x:String"
                                    Android="fonteTitulo.ttf#fonteTitulo" />
                </Setter.Value>
            </Setter>
            <Setter Property="TextColor" Value="Black"/>
        </Style>

        <Style x:Key="fonteTextos" TargetType="Label">
            <Setter Property="FontFamily">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="x:String"
                                    Android="fonteTexto.ttf#fonteTexto" />
                </Setter.Value>
            </Setter>
            <Setter Property="TextColor" Value="Black"/>
        </Style>

        <Style x:Key="titulo" TargetType="Label" BaseResourceKey="fonteTitulos">
            <Setter Property="FontSize" Value="Body"/>
        </Style>

        <Style x:Key="texto" TargetType="Label" BaseResourceKey="fonteTextos">
            <Setter Property="FontSize" Value="Body"/>
        </Style>
    </Application.Resources>
</Application>